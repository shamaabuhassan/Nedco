@using WebApplication1.Models
@model TransferParameters


@{
    int rc;
    Transfer[] transfers = null;
    int meter = 0;


    if (ViewBag.MeterId != null)
    {
        meter = ViewBag.MeterId;
        transfers = Transfer.GetTransfers(new TransferParameters { MeterId = meter }, out rc);

    }

}


@if (transfers != null)
{
    <table>
        <thead>
            <tr>
                <td>رقم العملية</td>
                <td>الكود المستخدم في التحويل </td>
                <td>رقم العداد المحول اليه</td>
                <td>كمية التحويل</td>
            </tr>

        </thead>
        <tbody>
            @foreach (Transfer transfer in transfers)
            {
                <tr>
                    <td>@transfer.Id</td>
                    <td>@transfer.SenderOTP</td>
                    <td>@transfer.MeterId</td>
                    <td>@transfer.Amount</td>

                </tr>

            }

        </tbody>
        <a href="~/Models/cstr.cs">~/Models/cstr.cs</a>

    </table>
}
@if (transfers == null)
{

    <a href="@Url.Action("Transferom", "Inquiries", new { meter=meter})"></a>;

}





<div style="flex:1; padding-left: 35px" class="vertical-align">


    @using (Html.BeginForm("Transfers", "Inquiries", FormMethod.Post))
    {
        @Html.TextBoxFor(o => o.MeterId);

        <input type="submit" value="Transfers" />
    }

</div>


<div style="text-align: center;">

    <div class="hexagon full small blue">

        <span></span>
        <img src="~/images/user.png" style="width: 140px;z-index: 4;position: relative;" />
    </div>
    <div class="hexagon blue">
        <span></span>

        <div class="content">

            <a class="brand-button brand-button-2" href="@Url.Action("Transfers", "Inquiries")">سجل التحويلات</a>


            <a class="brand-button brand-button-2" href="@Url.Action("Charges","Inquiries")">سجل الشحن</a>


            <a class="brand-button brand-button-2" href="@Url.Action("MonthlyCharge", "Inquiries")">معدل شحن شهري</a>


            <a class="brand-button brand-button-2" href="@Url.Action("index", "Mainpage")">الصفحة الرئسية</a>

        </div>
    </div>
</div>

